---
import type { small } from "motion/react-client";
import Heading from "./Heading.astro";
import Text from "./Text.astro";
import Button from "./Button.astro";
---

<section class="bg-primary p-5 md:py-40">
  <div class="col-span-6 md:col-start-3 md:col-span-8 text-center text-accent">
    <!-- Overskrift -->
    <div class="col-span-6 text-center text-accent">
      <Heading style="h1">Tilmeld dig</Heading>
      <Heading style="h5">( Udfyld herunder )</Heading>
    </div>

    <!-- Formular -->
    <form
      class="col-span-6 md:col-start-3 md:col-span-8 grid grid-cols-6 gap-5 mt-8 md:grid-cols-12 md:gap-6"
    >
      <div class="col-span-6 md:col-start-4 md:col-span-6">
        <input
          type="text"
          name="name"
          placeholder="Navn:"
          class="w-full bg-secondary text-primary
        px-2.5 py-2 placeholder-primary focus:outline-none
        focus:ring-2 focus:ring-secondary focus:bg-primary focus:text-secondary"
        />
      </div>
      <div class="col-span-6 md:col-start-4 md:col-span-6">
        <input
          type="text"
          name="adress"
          placeholder="Adresse:"
          class="w-full bg-secondary text-primary
        px-2.5 py-2 placeholder-primary focus:outline-none
        focus:ring-2 focus:ring-secondary focus:bg-primary focus:text-secondary"
        />
      </div>
      <div class="col-span-6 md:col-start-4 md:col-span-3">
        <input
          type="email"
          name="emial"
          placeholder="Email:"
          class="w-full bg-secondary text-primary
        px-2.5 py-2 placeholder-primary focus:outline-none
        focus:ring-2 focus:ring-secondary focus:bg-primary focus:text-secondary"
        />
      </div>
      <div class="col-span-6 md:col-start-7 md:col-span-3">
        <input
          type="tel"
          name="phone"
          placeholder="Telefonnummer:"
          class="w-full bg-secondary text-primary
        px-2.5 py-2 placeholder-primary focus:outline-none
        focus:ring-2 focus:ring-secondary focus:bg-primary focus:text-secondary"
        />
      </div>
      <div class="col-span-6 md:col-start-4 md:col-span-6 relative">
        <!-- OPHOLD -->

        <label for="ophold"></label>

        <select
          id="ophold"
          name="ophold"
          class="w-full bg-secondary text-primary
           px-2.5 py-2 placeholder-primary focus:outline-none
           focus:ring-2 focus:ring-secondary focus:bg-primary focus:text-secondary
           appearance-none -moz-appearance-none -webkit-appearance-none"
        >
          <option disabled selected>Ophold</option>
          <option>Indien</option>
          <option>Costa Rica</option>
          <option>Mexico</option>
          <option>Brasilien</option>
        </select>
        <div
          class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 text-primary focus:text-secondary"
        >
          ▼
        </div>
      </div>
      <div class="col-span-6 md:col-start-4 md:col-span-6 relative">
        <!-- OPHOLD -->

        <label for="dato"></label>

        <select
          id="dato"
          name="Afrejsedato"
          class="w-full bg-secondary text-primary
           px-2.5 py-2 placeholder-primary focus:outline-none
           focus:ring-2 focus:ring-secondary focus:bg-primary focus-within:text-secondary
           appearance-none -moz-appearance-none -webkit-appearance-none"
        >
          <option disabled selected>Afrejsedato</option>
          <option>1/1-2026</option>
          <option>1/2-2026</option>
          <option>1/3-2016e</option>
          <option>1/4-2016</option>
        </select>
        <div
          class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 text-primary focus-within:text-secondary"
        >
          ▼
        </div>
      </div>
      <!-- Knap  -->
      <div
        class="col-start-5 col-span-2 flex justify-end md:col-start-8 md:col-span-2"
      >
        <button class="text-accent hover:text-secondary">
          <Text size="large">( Send )</Text></button
        >
      </div>
    </form>
  </div>
</section>
