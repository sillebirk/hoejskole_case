---
// Astro.props: kun style
const { style = "h2", stylingclasses = "" } = Astro.props;

// style bestemmer både HTML-tag og Tailwind-classes
const sizeClasses = {
  h1: "text-[36px] tracking-2.8 md:text-[100px] tracking-wider font-display uppercase",
  h2: "text-[36px] tracking-2.8 md:text-[75px] tracking-6 font-sans uppercase",
  h3: "text-[36px] tracking-2.4 md:text-[75px] font-sans tracking-6 font-medium",
  h4: "text-[30px] md:text-[36px] font-sans font-medium tracking-2.4",
  h5: "text-[20px] md:text-[30px] font-sans",

  //   Footer h1
  h6: "text-[44px] md:text-[125px]  font-display uppercase",
  h7: "text-[150px] md:text-[200px] font-display",
};

const Htmlheading = style; // HTML-tag følger style
---

<Htmlheading class:list={[sizeClasses[style], stylingclasses]}>
  <slot />
</Htmlheading>
